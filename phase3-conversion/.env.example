# Server Configuration
NODE_ENV=development
PORT=3003

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_TAX_ENABLED=false

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Phase 1 API (User & Product Data)
PHASE1_API_URL=http://localhost:3001/api

# AR Service Configuration
AR_SERVICE_URL=http://localhost:3003/api/ar

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Database (for future implementation)
# DATABASE_URL=postgresql://user:password@localhost:5432/nerdx_phase3
# REDIS_URL=redis://localhost:6379

# Email Service (for order confirmations)
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=orders@nerdx.com

# Analytics
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Feature Flags
ENABLE_PREVIEW_MODE=true
PREVIEW_DURATION_MINUTES=30

# APEC Specific
APEC_LIMITED_EDITION_MAX_QUANTITY=500
APEC_EVENT_START_DATE=2024-11-10
APEC_EVENT_END_DATE=2024-11-17

{
  "info": {
    "name": "Phase 3: Conversion (Commerce + AR)",
    "description": "API collection for Phase 3 Commerce and AR endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3003",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "user-123",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "apec-limited-001",
      "type": "string"
    },
    {
      "key": "sessionId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Status",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Root Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            }
          }
        },
        {
          "name": "AR Service Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/ar/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ar", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Checkout Session",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('sessionId', response.session.sessionId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/checkout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "checkout"]
            }
          }
        },
        {
          "name": "Get Session Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/session/{{sessionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "session", "{{sessionId}}"]
            }
          }
        },
        {
          "name": "Get Order Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}"]
            }
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/user/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "user", "{{userId}}"]
            }
          }
        },
        {
          "name": "Request Refund",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Customer requested\",\n  \"amount\": 299.99\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/refund",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}", "refund"]
            }
          }
        }
      ]
    },
    {
      "name": "AR Experiences",
      "item": [
        {
          "name": "Unlock AR Experience",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productId\": \"{{productId}}\",\n  \"orderId\": \"{{orderId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/ar/unlock",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ar", "unlock"]
            }
          }
        },
        {
          "name": "Get AR Experience",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/ar/experience/{{productId}}?userId={{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ar", "experience", "{{productId}}"],
              "query": [
                {
                  "key": "userId",
                  "value": "{{userId}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get User AR Experiences",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/ar/user/{{userId}}/experiences",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ar", "user", "{{userId}}", "experiences"]
            }
          }
        },
        {
          "name": "Grant Preview Access",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productId\": \"{{productId}}\",\n  \"duration\": 30\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/ar/preview",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ar", "preview"]
            }
          }
        },
        {
          "name": "Verify Access Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accessToken\": \"user-123:apec-limited-001:1699635600000:base64signature\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/ar/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ar", "verify"]
            }
          }
        },
        {
          "name": "Revoke AR Access",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productId\": \"{{productId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/ar/access",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ar", "access"]
            }
          }
        },
        {
          "name": "Get AR Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/ar/analytics/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ar", "analytics", "{{productId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Stripe Webhook (Test)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Stripe-Signature",
                "value": "t=1234567890,v1=test_signature"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"checkout.session.completed\",\n  \"data\": {\n    \"object\": {\n      \"id\": \"cs_test_123\",\n      \"payment_status\": \"paid\",\n      \"metadata\": {\n        \"userId\": \"user-123\",\n        \"productId\": \"apec-limited-001\",\n        \"orderId\": \"order-123\",\n        \"arEnabled\": true\n      }\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/stripe",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhooks", "stripe"]
            }
          }
        }
      ]
    }
  ]
}

# NERDX Independent Accounting System - Environment Variables

# API Configuration
API_HOST=0.0.0.0
API_PORT=8003
API_ENVIRONMENT=development

# Salesforce CRM
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com
SALESFORCE_USERNAME=your_username@domain.com
SALESFORCE_PASSWORD=your_password
SALESFORCE_SECURITY_TOKEN=your_security_token
SALESFORCE_CONSUMER_KEY=your_consumer_key
SALESFORCE_CONSUMER_SECRET=your_consumer_secret

# Odoo ERP
ODOO_URL=https://your-odoo.com
ODOO_DB=your_database
ODOO_USERNAME=your_username
ODOO_PASSWORD=your_password

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5432/nerdx_accounting

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@nerdx.com
SMTP_USE_TLS=True

# Report Configuration
REPORT_GENERATION_HOUR=6
REPORT_TIMEZONE=Asia/Seoul

# Cell Configuration
DEFAULT_CURRENCY=KRW
GROSS_PROFIT_MARGIN_TARGET=0.30

# Helios Integration (Optional)
USE_HELIOS=False
HELIOS_API_URL=http://localhost:8002
